<h1>New contact</h1>

<%= error_messages_for :contact %>

<% form_for(@contact) do |f| %>
  <p>
    <b>Forename</b><br />
    <%= f.text_field :forename %>
  </p>

  <p>
    <b>Surname</b><br />
    <%= f.text_field :surname %>
  </p>

  <p>
    <b>D.O.B.</b><br />
    <%= f.date_select :dob, :start_year => 1900 %>
  </p>

  <%= f.hidden_field :user_id %>

  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', contacts_path %>
